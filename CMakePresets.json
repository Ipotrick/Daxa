{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "system_Windows",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/_out/bin/${presetName}",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/_out/bin/${presetName}"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "system_Linux",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "defaults",
            "hidden": true,
            "binaryDir": "${sourceDir}/_out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_MODULE_PATH": "${sourceDir}/buildsystem/cmake"
            }
        },
        {
            "name": "generator_ninja",
            "hidden": true,
            "generator": "Ninja"
        },
        {
            "name": "generator_defaults_visualstudio",
            "hidden": true,
            "inherits": "system_Windows"
        },
        {
            "name": "generator_vs2017",
            "hidden": true,
            "generator": "Visual Studio 15 2017",
            "inherits": "generator_defaults_visualstudio"
        },
        {
            "name": "generator_vs2019",
            "hidden": true,
            "generator": "Visual Studio 16 2019",
            "inherits": "generator_defaults_visualstudio"
        },
        {
            "name": "generator_vs2022",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "inherits": "generator_defaults_visualstudio"
        },
        {
            "name": "buildtype_debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "buildtype_release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "buildtype_relwithdebinfo",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "toolchain_vcpkg",
            "hidden": true,
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        {
            "name": "ninja_vcpkg_debug_Windows",
            "displayName": "ninja_vcpkg_debug_Windows",
            "inherits": [
                "generator_ninja",
                "toolchain_vcpkg",
                "buildtype_debug",
                "system_Windows",
                "defaults"
            ]
        },
        {
            "name": "ninja_vcpkg_release_Windows",
            "displayName": "ninja_vcpkg_release_Windows",
            "inherits": [
                "generator_ninja",
                "toolchain_vcpkg",
                "buildtype_release",
                "system_Windows",
                "defaults"
            ]
        },
        {
            "name": "vs2022_vcpkg_release_Windows",
            "displayName": "vs2022_vcpkg_release_Windows",
            "inherits": [
                "generator_vs2022",
                "toolchain_vcpkg",
                "buildtype_release",
                "system_Windows",
                "defaults"
            ]
        }
    ]
}